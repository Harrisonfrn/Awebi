{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1>Recettage: {{ recettage.title }} - {{ recettage.createdAt | date("m/d/Y") }} à {{ recettage.createdAt | date("H:i") }}</h1>
        </div>
    </div>

    <div class="container mt-4">
        <div class="col-md-6">
            <h2>Navigateur : {{ recettage.navigator }}</h2>
            <h2>Status de la fonctionalité : {{ recettage.status }}</h2>
            <h2>Poser une question : {{ recettage.ask | nl2br }}</h2>
            <h2>Signaler un buf : {{ recettage.bug }}</h2>
            <h2>Demander une fonctionalité : {{ recettage.askfonctionality }}</h2>
        </div>
    </div>
{% endblock %}